# Database
DATABASE_URL=postgresql+asyncpg://username:password@localhost/ai_todo_db

# Authentication
CLERK_SECRET_KEY=sk_test_your_key_here
CLERK_API_URL=https://api.clerk.dev

# AI Service
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=2048
AI_REQUEST_TIMEOUT=30

# AI Rate Limiting & Retry
AI_MAX_RETRY_ATTEMPTS=3
AI_RETRY_BACKOFF_FACTOR=2.0
AI_RETRY_MIN_WAIT=1
AI_RETRY_MAX_WAIT=60
AI_REQUESTS_PER_MINUTE=15

# File Storage
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
S3_BUCKET_NAME=ai-todo-files
S3_REGION=us-east-1

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Limits
MAX_FILE_SIZE=52428800
MAX_TODOS_PER_USER=1000
MAX_SUBTASKS_DEPTH=5

# Environment
ENVIRONMENT=development